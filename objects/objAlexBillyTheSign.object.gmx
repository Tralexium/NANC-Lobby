            <string>/// Check if the player is near

if(!is_talking) {
    sprite_index = idle_sprite;
    image_xscale = initial_xscale;
    
    var _dist = 1000;
    if(instance_exists(objPlayer)) {
        _dist = distance_to_object(objPlayer);
    }
    
    if(_dist &lt;= max_distance) {
        show_icons = true;
        if(scrButtonCheckPressed(dialog_button)) {
            // Add a cool fact into the list
            dialog_list[| 1] = fact_string[fact_index];
            fact_index = (fact_index + 1) mod max_fact_index;
            
            is_talking = true;
            dialog_box = instance_create(x, y, objAlexDialogBox);
            dialog_box.npc_name = npc_name;
            dialog_box.letter_sfx = letter_sfx;
            ds_list_copy(dialog_box.dialog_list, dialog_list);
            
            // Change the first dialog to make it less tedious to progress
            dialog_list[| 0] = "Came back for more huh?";
        }
    } else {
        show_icons = false;
    }
} else {
    if(!instance_exists(objAlexDialogBox)) {
        dialog_box = noone;
        is_talking = false;
        
        with(objPlayer) frozen = false;
    } else {
        show_icons = false;
        with(objPlayer) frozen = true;
        
        if(dialog_box.talking) {
            sprite_index = talking_sprite;
        } else {
            sprite_index = idle_sprite;
        }
        
        if(instance_exists(objPlayer) &amp;&amp; !lock_dir) {
            if(objPlayer.x &gt; x)
                image_xscale = 1;
            else
                image_xscale = -1;
        }
    }
}


