            <string>/// Draw the free roam stuff

if(arrow_alpha &gt; 0) {
    var bar_segments = round(display_get_gui_width() / bar_length);
    var bar_bottom_side_rise = display_get_gui_height()- bar_rise_amnt - bar_height;
    var bar_right_side_rise = display_get_gui_width()- bar_rise_amnt - bar_height;
    var bar_render_x_bottom = bar_length - bar_render_x;
    for(var i=0; i&lt;bar_segments; i++) {
        var segment_x_y = i*32;
        // Top &amp; Bottom
        draw_sprite_part(sprAlexPauseUITopBar, 0, bar_render_x, 0, bar_length, bar_height, segment_x_y, bar_rise_amnt);
        draw_sprite_part(sprAlexPauseUIBottomBar, 0, bar_render_x_bottom, 0, bar_length, bar_height, segment_x_y, bar_bottom_side_rise);
        // Left &amp; Right
        draw_sprite_part(sprAlexWavyBarLeft, 0, 0, bar_render_x, bar_height, bar_length, bar_rise_amnt, segment_x_y);
        draw_sprite_part(sprAlexWavyBarRight, 0, 0, bar_render_x_bottom, bar_height, bar_length, bar_right_side_rise, segment_x_y);
    }
    
    arrow_t++;
    var _wiggle = dsin(arrow_t*4) * 8;
    var _arrow_margin = 80;
    var _hor_middle = display_get_gui_width()/2;
    var _ver_middle = display_get_gui_height()/2;
    // Left Arrow
    if(xTarget != xMin)
        draw_sprite_ext(sprAlexLobbyElevatorPresentArrow, 0, _arrow_margin + _wiggle, _ver_middle, 3, 3, 0, -1, arrow_alpha);
    // Right Arrow
    if(xTarget != xMax)
        draw_sprite_ext(sprAlexLobbyElevatorPresentArrow, 0, (_hor_middle*2) - _arrow_margin - _wiggle, _ver_middle, 3, 3, 180, -1, arrow_alpha);
    // Top Arrow
    if(yTarget != yMin)
        draw_sprite_ext(sprAlexLobbyElevatorPresentArrow, 0, _hor_middle, _arrow_margin + _wiggle, 3, 3, -90, -1, arrow_alpha);
    // Bottom Arrow
    if(yTarget != yMax)
        draw_sprite_ext(sprAlexLobbyElevatorPresentArrow, 0, _hor_middle, (_ver_middle*2) - _arrow_margin - _wiggle, 3, 3, 90, -1, arrow_alpha);
}
</string>
