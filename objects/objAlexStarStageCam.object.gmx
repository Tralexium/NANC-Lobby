          <argument>
            <kind>1</kind>
            <string>/// Free roam camera movement

if(free_roam) {
    var _hor_move = scrButtonCheck(global.rightButton) - scrButtonCheck(global.leftButton);
    var _ver_move = scrButtonCheck(global.downButton) - scrButtonCheck(global.upButton);
    var _old_x = xTarget;
    var _old_y = yTarget;
    
    xTarget += _hor_move * free_roam_spd;
    yTarget += _ver_move * free_roam_spd;
    
    xTarget = clamp(xTarget, xMin, xMax);
    yTarget = clamp(yTarget, yMin, yMax);
    
    if(_old_x != xTarget || _old_y != yTarget) {
        if(!audio_is_playing(sndAlexSnakeBlockMove) &amp;&amp; !audio_is_playing(sndAlexFreeRoamCamOn))
            audio_play_sound(sndAlexSnakeBlockMove, 0, false);
    }

    x = lerp(x, xTarget, followSpeed);
    y = lerp(y, yTarget, followSpeed);
    view_xview[0] = x;
    view_yview[0] = y;
}
</string>
