            <kind>1</kind>
            <string>/// Manipulate the cam coords

if(!active)
    exit;


with objPlayer {
    with instance_place(x, y, objAlexStarCameraTrigger) {
        objAlexStarStageCam.index = index
    }
}
event_user(1);


if index == -1 {
    if instance_exists(target_obj) {
        xTarget = target_obj.x-view_wview[0]/2
        yTarget = target_obj.y-view_hview[0]/2
    }
    
    // Make sure the target doesn't extend the room dimensions
    xTarget = clamp(xTarget, 0, room_width-view_wview[0]);
    yTarget = clamp(yTarget, 0, room_height-view_hview[0]);
}
else {
    if instance_exists(target_obj) {
        xTarget = target_obj.x-view_wview[0]/2
        yTarget = target_obj.y-view_hview[0]/2
    }
    xTarget = clamp(xTarget, xMin, xMax)
    yTarget = clamp(yTarget, yMin, yMax)
}


/* Pat's version
x += (xTarget-x) * followSpeed
y += (yTarget-y) * followSpeed
*/

x = lerp(x, xTarget, followSpeed);
y = lerp(y, yTarget, followSpeed);
view_xview[0] = x
view_yview[0] = y
