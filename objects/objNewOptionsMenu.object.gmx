topFade = ySeperation;
bottomFade = ySelector + (6 * ySeperation);
thresholdSpace = ySeperation;

strSelect[0] = "Music";
strSelect[1] = "Volume Level";
strSelect[2] = "Screen Mode";
strSelect[3] = "Smoothing Mode";
strSelect[4] = "Vsync";
strSelect[5] = "Death Sound";
strSelect[6] = "Set Keyboard Controls";
strSelect[7] = "Controller Options";
</string>
          </argument>
