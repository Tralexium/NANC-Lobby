        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// Check if the player is near

if(!is_talking) {
    sprite_index = idle_sprite;
    image_xscale = initial_xscale;
    
    var _dist = 1000;
    if(instance_exists(objPlayer)) {
        _dist = distance_to_object(objPlayer);
    }
    
    if(_dist &lt;= max_distance) {
        show_icons = true;
        if(scrButtonCheckPressed(dialog_button)) {
            // Remembers the convo
            speech_activated = true;
            instance_activate_object(objOneTimeTrigger);
        
            is_talking = true;
            dialog_box = instance_create(x, y, objAlexDialogBox);
            dialog_box.npc_name = npc_name;
            dialog_box.letter_sfx = letter_sfx;
            ds_list_copy(dialog_box.dialog_list, dialog_list);
        }
    } else {
        show_icons = false;
    }
    
    // Do the funny
    if(speech_activated &amp;&amp; global.trigger[trigger_num]) {
        speech_activated = false;
        global.trigger[trigger_num] = false;
    
        // Modify the original text to ridicule you even more
        dialog_list[| 0] = "You fell in the bamboozer pit!"
        dialog_list[| 1] = "Can't believe you fell for that."
        
        is_talking = true;
        dialog_box = instance_create(x, y, objAlexDialogBox);
        dialog_box.npc_name = npc_name;
        dialog_box.letter_sfx = letter_sfx;
        dialog_box.dialog_list[| 0] = "Lol jk. Get bamboozled.";
    }
    
} else {
    if(!instance_exists(objAlexDialogBox)) {
        dialog_box = noone;
        is_talking = false;
        
        with(objPlayer) frozen = false;
    } else {
        show_icons = false;
        with(objPlayer) frozen = true;
        
        if(dialog_box.talking) {
            sprite_index = talking_sprite;
        } else {
            sprite_index = idle_sprite;
        }
        
        if(instance_exists(objPlayer) &amp;&amp; !lock_dir) {
            if(objPlayer.x &gt; x)
                image_xscale = 1;
            else
                image_xscale = -1;
                
            objPlayer.xScale = -image_xscale;
        }
    }
}
</string>
