        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// Check if the player is near

if(!is_talking) {
    sprite_index = idle_sprite;
    image_xscale = initial_xscale;
    
    var _dist = 1000;
    if(instance_exists(objPlayer)) {
        _dist = distance_to_object(objPlayer);
    }
    
    if(_dist &lt;= max_distance) {
        show_icons = true;
        if(scrButtonCheckPressed(dialog_button)) {
            is_talking = true;
            dialog_box = instance_create(x, y, objAlexDialogBox);
            dialog_box.npc_name = npc_name;
            dialog_box.letter_sfx = letter_sfx;
            ds_list_copy(dialog_box.dialog_list, dialog_list);
            
            // Change dialog for next interaction
            if(!dropped_oil) {
                dialog_list[| 0] = "How's the oil trick going for ya?";
                dialog_list[| 1] = "Not liking it? Well on the bright side you're getting those nutrients for your skin.";
            }
        }
    } else {
        show_icons = false;
    }
} else {
    if(!instance_exists(objAlexDialogBox)) {
        if(!dropped_oil &amp;&amp; instance_exists(objPlayer)) {
            if(oil_id == noone)
                oil_id = instance_create(objPlayer.x, objPlayer.y - 64, objAlexLeTrollOil);
                
            if(!instance_exists(oil_id))
                dropped_oil = true;
        } else {
            dialog_box = noone;
            is_talking = false;
            
            with(objPlayer) frozen = false;
        }
    } else {
        show_icons = false;
        with(objPlayer) frozen = true;
        
        if(dialog_box.talking) {
            sprite_index = talking_sprite;
        } else {
            sprite_index = idle_sprite;
        }
        
        if(instance_exists(objPlayer) &amp;&amp; !lock_dir) {
            if(objPlayer.x &gt; x)
                image_xscale = 1;
            else
                image_xscale = -1;
                
            objPlayer.xScale = -image_xscale;
        }
    }
}


</string>
